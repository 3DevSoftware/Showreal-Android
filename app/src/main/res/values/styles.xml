<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.ShowReal.Toolbar</item>
        <item name="android:textAppearance">@style/TextAppearance.ShowReal</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.ShowReal.Button</item>
        <item name="alertDialogTheme">@style/Theme.ShowReal.Dialog.Alert</item>
        <item name="popupMenuStyle">@style/Widget.ShowReal.PopupMenu</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.ShowReal.Category</item>
        <item name="android:preferenceStyle">@style/Preference.ShowReal</item>
        <item name="segmentPreferenceStyle">@style/Preference.ShowReal.Segment</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.ShowReal.ActionBar.Menu</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ShowReal.ActionBar.Menu</item>
    </style>

    <style name="Theme.ShowReal" parent="AppTheme">

    </style>

    <style name="Theme.ShowReal.LightStatus">

    </style>

    <style name="Theme.ShowReal.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.ShowReal.Settings" parent="@style/AppTheme">
        <item name="colorAccent">@color/purple_dark</item>
    </style>

    <style name="Theme.ShowReal.Launch" parent="Theme.ShowReal.LightStatus">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme.ShowReal.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarButtonStyle">@style/Widget.ShowReal.ButtonBar.Button.AlertDialog</item>
        <item name="android:windowBackground">@drawable/alert_background</item>
    </style>

    <style name="Theme.ShowReal.Camera">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.ShowReal.ButtonBar.Button.AlertDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.ShowReal.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/Widget.AppCompat.PopupMenu</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.ShowReal.Toolbar.Conversation" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/purple_dark</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="Widget.ShowReal.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar">
        <item name="android:background">@drawable/gradient_buttons_bottom</item>
    </style>

    <style name="Widget.ShowReal.ButtonBar.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white87</item>
        <item name="android:textAppearance">@style/TextAppearance.ShowReal.Body1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Widget.ShowReal.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="Widget.ShowReal.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:dropDownSelector">?attr/selectableItemBackground</item>
        <item name="android:popupBackground">@drawable/spinner_popup_background</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Preference.ShowReal.Category" parent="Theme.AppCompat">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Preference.ShowReal" parent="Theme.AppCompat">
        <item name="android:layout">@layout/preference</item>
    </style>

    <style name="Preference.ShowReal.Segment" parent="Theme.AppCompat">
        <item name="android:layout">@layout/preference_segment</item>
    </style>

    <style name="TextAppearance.ShowReal.Widget.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextAppearance.ShowReal" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.ShowReal.Body1" parent="TextAppearance.AppCompat.Body1"/>
    <style name="TextAppearance.ShowReal.Body2" parent="TextAppearance.AppCompat.Body2"/>
    <style name="TextAppearance.ShowReal.Caption" parent="TextAppearance.AppCompat.Caption"/>
    <style name="TextAppearance.ShowReal.Title" parent="TextAppearance.AppCompat.Title"/>
    <style name="TextAppearance.ShowReal.Empty" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="TextAppearance.ShowReal.Headline" parent="TextAppearance.AppCompat.Headline"/>
    <style name="TextAppearance.ShowReal.SubHead" parent="TextAppearance.AppCompat.Subhead"/>
    <style name="TextAppearance.ShowReal.Button" parent="TextAppearance.AppCompat.Button"/>

    <style name="TextAppearance.ShowReal.ActionBar.Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FixedWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@android:color/white</item>
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back</item>
        <item name="searchSuggestionBackground">@color/white87</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textColorHint">@color/black54</item>
        <item name="android:hint">Searchâ€¦</item>
    </style>

    <style name="Animation.Toast" parent="">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
</resources>
